<nav class='navbar navbar-expand bg-transparent navbar-light sticky-top'>
    <div class='nav navbar-nav ml-auto'>
        <div class='nav-item dropdown btn btn-warning px-3 py-0'>
            <a class='nav-link dropdown-toggle text-body' href='#' id='navbarDropdown' role='button'
                data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>Sign In</a>
            <div class='dropdown-menu dropdown-menu-right' aria-labelledby='navbarDropdown'>
                <form class='px-4 py-3'>
                    <div class='form-group'>
                        <label for='exampleDropdownFormUsername1'>Username</label>
                        <input type='Username' class='form-control' id='userSignIn' placeholder='Username'>
                    </div>
                    <div class='form-group'>
                        <label for='exampleDropdownFormPassword1'>Password</label>
                        <input type='password' class='form-control' id='passwordSignIn' placeholder='Password'>
                    </div>
                    <a type='submit' id='signIn' class='btn btn-warning'>Sign In</a>
                </form>
